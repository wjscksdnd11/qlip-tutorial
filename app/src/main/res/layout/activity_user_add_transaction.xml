<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_container"
    android:orientation="vertical"
    android:background="@color/qlip_main_dark_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <include layout="@layout/toolbar_actionbar"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/largeCategoryLinear"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_weight="1"
            android:layout_height="0dp"
            >

            <ImageView
                android:layout_width="32dp"
                android:id="@+id/largeCategoryImg"
                android:layout_gravity="center_vertical"
                android:layout_height="32dp" />
            <FrameLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/largeCategoryText"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/qlip_main_white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:background="@drawable/ic_dropdown_white"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/margin"
            android:id="@+id/mediumCategoryLinear"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:text="@string/user_add_transaction_arrow"
                android:textColor="@color/qlip_main_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="start|center_vertical"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:textColor="@color/qlip_main_white"
                    android:layout_height="match_parent"
                    android:id="@+id/mediumCategoryText"
                    android:background="@color/transparent_background"
                    />

                <ImageView
                    android:background="@drawable/ic_dropdown_white"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>


        </LinearLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_weight="1"
            android:layout_height="0dp"
            >

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_store_mall_directory_white"
                    android:layout_height="24dp" />

            </FrameLayout>


            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:inputType="text"
                    android:cursorVisible="false"
                    android:imeOptions="actionDone"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginRight="80dp"
                    android:layout_marginEnd="80dp"
                    android:gravity="center_vertical"
                    android:id="@+id/keywordEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/qlip_main_white"
                    android:lines = "1"
                    android:maxLength="50"
                    android:ellipsize="none"
                    android:textSize="15sp"
                    android:background="@color/transparent_background"
                    android:hint="@string/user_add_transaction_keyword_hint"
                    android:textColorHint="@color/qlip_sub_text"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical|end"
                    android:id="@+id/webSearchTextView"
                    android:textSize="15sp"
                    android:text="@string/user_add_transaction_search_web"
                    android:background="@drawable/bg_selector"
                    android:textColor="@color/qlip_main_green"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
            </FrameLayout>


        </LinearLayout>
        <FrameLayout
            android:layout_marginBottom="@dimen/margin"
            android:id="@+id/franchiseFrame"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/franchiseText"
                android:textSize="15sp"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:text=""
                android:textColor="@color/qlip_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </FrameLayout>
    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/tagLinear"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_width="match_parent"
        android:background="@drawable/bg_selector"
        android:layout_weight="1"
        android:layout_height="0dp">


        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_label_white"
                android:layout_height="24dp" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tag_recycler_view"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="30dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <LinearLayout
            android:id="@+id/spentMoneyLinear"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_weight="1"
            android:layout_height="0dp">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_won_white"
                    android:layout_height="24dp" />

            </FrameLayout>


            <TextView
                android:id="@+id/spentMoneyText"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/qlip_main_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:id="@+id/cardNameLinear"
            android:background="@drawable/bg_selector"
            android:layout_weight="1"
            android:layout_height="0dp">


            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_payment_white"
                    android:layout_height="24dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/cardNameText"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/qlip_main_white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:background="@drawable/ic_dropdown_white"
                    android:layout_gravity="center_vertical|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_marginBottom="@dimen/margin"
            android:id="@+id/installmentFrame"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/installmentText"
                android:textSize="15sp"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:text="@string/user_add_transaction_not_installment"
                android:textColor="@color/qlip_main_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/installment_arrow"
                android:background="@drawable/ic_dropdown_white"
                android:layout_gravity="center_vertical|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_weight="1"
            android:layout_height="0dp">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_query_builder_white"
                    android:layout_height="24dp" />

            </FrameLayout>


            <FrameLayout
                android:layout_marginStart="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView

                    android:id="@+id/spentDateTextView"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_selector"
                    android:textColor="@color/qlip_main_white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"

                    android:id="@+id/spentTimeTextView"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|end"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/bg_selector"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </FrameLayout>


        </LinearLayout>
        <FrameLayout
            android:id="@+id/repeatFrame"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/repeatText"
                android:textSize="15sp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:text="@string/user_add_transaction_not_repeat"
                android:textColor="@color/qlip_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </FrameLayout>

        <View
            android:layout_marginTop="@dimen/margin"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_width="match_parent"
        android:background="@drawable/bg_selector"
        android:layout_weight="1"
        android:layout_height="0dp">


        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_receipt_white"
                android:layout_height="24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_marginStart="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:inputType="text"
                android:imeOptions="actionDone"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:id="@+id/memoEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/qlip_main_white"
                android:lines="1"
                android:maxLength="50"
                android:ellipsize="end"
                android:textSize="15sp"
                android:background="@color/transparent_background"
                android:hint="@string/user_add_transaction_memo_hint"
                android:textColorHint="@color/qlip_sub_text"
                android:layout_gravity="center_vertical"
                />

        </FrameLayout>




    </LinearLayout>
        <FrameLayout
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:id="@+id/confirm"
                android:background="@drawable/btn_email_signin_light_normal_xxhdpi"
                android:layout_width="match_parent"
                android:text="@string/user_add_transaction_enter"
                android:textSize="20sp"
                android:elevation="12dp"
                android:textStyle="bold"
                android:textColor="@color/qlip_main_dark_3"
                android:layout_gravity="center"
                android:layout_height="50dp" />

        </FrameLayout>

    </LinearLayout>
